import random

def roll_dice():
    """Simulate rolling a dice and return the result (1â€“6)."""
    return random.randint(1, 6)

def dice_simulator():
    print("ðŸŽ² Welcome to the Dice Rolling Simulator ðŸŽ²")
    
    while True:
        choice = input("Do you want to roll the dice? (yes/no): ").strip().lower()
        
        if choice == "yes":
            result = roll_dice()
            print(f"You rolled a {result}!")
        elif choice == "no":
            print("Thanks for playing! Goodbye ðŸ‘‹")
            break
        else:
            print("Invalid choice. Please type 'yes' or 'no'.")

# Run the simulator
dice_simulator()